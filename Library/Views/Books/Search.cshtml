@{
  Layout = "_Layout";
}
@using Library.Models;
@model List<Library.Models.Book>;

<h1>SEARCH</h1>

@if(Model.Count == 0)
{
  <p> No book titles match this search </p>
}
else
{
  <ul>
    @foreach(Book book in Model)
    {
      <li> @Html.ActionLink($"{book.Title}", "Details", new {id = book.BookId}) : @book.Title</li>
    }
  </ul>
}
<p>@Html.ActionLink("Back to books", "Index")</p>
<p>@Html.ActionLink("Add new book", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
