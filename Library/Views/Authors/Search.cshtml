@{
  Layout = "_Layout";
}
@using Library.Models;
@model List<Library.Models.Author>;

<h1>SEARCH</h1>

@if(Model.Count == 0)
{
  <p> No authors match this search </p>
}
else
{
  <ul>
    @foreach(Author author in Model)
    {
      <li> @Html.ActionLink($"{author.AuthorName}", "Details", new {id = author.AuthorId}) : @author.AuthorName</li>
    }
  </ul>
}
<p>@Html.ActionLink("Back to authors", "Index")</p>
<p>@Html.ActionLink("Add new Author", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
